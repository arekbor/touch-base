{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information",
        "System": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log-.txt",
          "shared": true,
          "rollingInterval": "Day",
          "outputTemplate": "{Timestamp:o} [{Level:u3}] [{SourceContext}] {Message}{NewLine}{Exception}",
          "restrictedToMinimumLevel": "Warning"
        }
      },
      {
        "Name": "Console",
        "Args": {
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console",
          "outputTemplate": "\n[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj}",
          "restrictedToMinimumLevel": "Information"
        }
      }
    ]
  },

  "Cors": {
    "AllowedOrigins": "http://localhost:4200",
    "AllowedMethods": "*",
    "AllowedHeaders": "*",
    "AllowCredentials": true,
    "MaxAgeInSeconds": 1800
  },

  "Persistence": {
    "Postgres": "Host=localhost;Port=5433;Username=postgres;Password=postgres;Database=touchbase"
  },

  "Jwt": {
    "Secret": "BbgZ01WknogUINkvUSKR7jDpvq2Ws2H4",
    "Issuer": "touchbase",
    "Audience": "touchbase",
    "ExpiresInSeconds": 5
  },

  "RefreshToken": {
    "ExpiresInSeconds": 6000
  },

  "AllowedHosts": "*"
}
